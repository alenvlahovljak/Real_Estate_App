<%include ./partials/header%>
    <div class="ui grid center aligned">
        <div class="ten wide computer ten wide tablet sixteen wide mobile column">
            <form class="ui form segment" action="/register" method="POST">
                <h4 class="ui dividing header">User registraton</h4>
                <div class="required two fields">
                    <div class="field">
                        <label>Username</label>
                        <input type="text" name="username" required="required">
                    </div>
                    <div class="field">
                        <label>Password</label>
                        <input type="password" name="password" required="required">
                    </div>
                </div>
                <div class="ui divider"></div>
                <div class="required field">
                    <label>Name</label>
                    <div class="two fields">
                        <div class="field">
                            <input type="text" name="firstName" placeholder="John" required="required">
                        </div>
                        <div class="field">
                            <input type="text" name="lastName" placeholder="Smith" required="required">
                        </div>
                    </div>
                </div>
                <div class="two fields">
                    <div class="eleven wide field">
                        <label>Avatar</label>
                        <input type="text" name="avatar" placeholder="http://www.example.com/user-avatar">
                    </div>
                    <div class="required five wide field">
                        <label>Gender</label>
                        <div class="inline field">
                            <div class="ui radio checkbox">
                                <input type="radio" name="gender" value="M" required="required">
                                <label>Male</label>
                            </div>
                            <div class="ui radio checkbox">
                                <input type="radio" name="gender" value="F" required="required">
                                <label>Female</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="two fields">
                    <div class="required field">
                        <label>Email</label>
                        <input type="text" name="email" placeholder="john.smith@example.com" required="required">
                    </div>
                    <div class="field">
                        <label>Phone Number</label>
                        <input type="text" name="phoneNum" placeholder="+1-202-555-0184">
                    </div>
                </div>
                <div class="required field">
                    <label>Address</label>
                    <div class="fields">
                        <div class="twelve wide field">
                            <input type="text" name="street" placeholder="Juniper Drive" required="required">
                        </div>
                        <div class="four wide field">
                            <input type="text" name="streetNum" placeholder="1091" required="required">
                        </div>
                    </div>
                </div>
                <div class="required three fields">
                    <div class="ten wide field">
                        <label>State</label>
                        <input type="text" name="state" placeholder="Michigan" required="required">
                    </div>
                    <div class="six wide field">
                        <label>Zip Code</label>
                        <input type="text" name="zipCode" placeholder="48607" required="required">
                    </div>
                    <div class="ten wide field">
                        <label>Country</label>
                        <input type="text" name="country" placeholder="The United States of America" required="required">
                    </div>
                </div>
                <button class="ui button green" tabindex="0">Register</button>
                <a href="/login">I have an account</a>
            </form>
        </div>
    </div>
<%include ./partials/footer%>
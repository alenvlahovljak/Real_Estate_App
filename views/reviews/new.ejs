<%include ../partials/header%>
    <div class="ui one column stackable center aligned page grid">
        <div class="column ten wide">
            <div class="ui segment">
                <form action="/real-estates/<%=realEstate._id%>/reviews" method="POST" class="ui form">
                    <h4 class="ui dividing header">Add Review for <%=realEstate.title%></h4>
                    <div class="field">
                        <input type="number" name="review[rating]" min="1" max="5" placeholder="min=1, max=5">
                    </div>
                    <div class="field">
                        <textarea name="review[comment]" placeholder="Describe your experience..."></textarea>
                    </div>
                    <button class="ui green button">Add Review</button>
                </form>
            </div>
        </div>      
    </div>
<%include ../partials/footer%>